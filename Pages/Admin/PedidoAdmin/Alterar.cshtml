@page "{id:int?}"
@model SuperOnline.Pages.Admin.PedidoAdmin.AlterarModel
@{
    ViewData["titulo"] = "Alteração de Pedido";
}

<main class="container mt-3">
    <div class="row justify-content-md-center">
        <div class="col-sm-12">
            <h1>@ViewData["titulo"] (@Model.Pedido.IdPedido.ToString("D6"))</h1>
            <hr />
            <form method="post" class="mt-3" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Pedido.IdPedido" />

                <div class="form-group">
                    <label asp-for="Pedido.Situacao" class="control-label"></label>
                    <select asp-for="Pedido.Situacao" asp-items="Html.GetEnumSelectList<SuperOnline.Models.Pedido.SituacaoPedido>()" class="form-control col-6">
                        <option selected="selected" value="">Selecione uma opção</option>
                    </select>
                    <span asp-validation-for="Pedido.Situacao" class="text-danger"></span>
                </div>

                <fieldset>
                    <legend>Endereço de Entrega</legend>

                    <div class="form-group">
                        <label asp-for="Pedido.Endereco.Logradouro" class="control-label"></label>
                        <input asp-for="Pedido.Endereco.Logradouro" class="form-control col-6" />
                        <span asp-validation-for="Pedido.Endereco.Logradouro" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Pedido.Endereco.Numero" class="control-label"></label>
                        <input asp-for="Pedido.Endereco.Numero" class="form-control col-1">
                        <span asp-validation-for="Pedido.Endereco.Numero" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Pedido.Endereco.Complemento" class="control-label"></label>
                        <input asp-for="Pedido.Endereco.Complemento" class="form-control col-2" />
                        <span asp-validation-for="Pedido.Endereco.Complemento" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Pedido.Endereco.Bairro" class="control-label"></label>
                        <input asp-for="Pedido.Endereco.Bairro" class="form-control col-4" />
                        <span asp-validation-for="Pedido.Endereco.Bairro" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Pedido.Endereco.Cidade" class="control-label"></label>
                        <input asp-for="Pedido.Endereco.Cidade" class="form-control col-4" />
                        <span asp-validation-for="Pedido.Endereco.Cidade" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Pedido.Endereco.Estado" class="control-label"></label>
                        <select asp-for="Pedido.Endereco.Estado" class="form-control col-2">
                            <option value="ES">Espírito Santo</option>
                            <option value="MG">Minas Gerais</option>
                            <option value="RJ">Rio de Janeiro</option>
                            <option value="SP">São Paulo</option>
                        </select>
                        <span asp-validation-for="Pedido.Endereco.Estado" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Pedido.Endereco.CEP" class="control-label"></label>
                        <input asp-for="Pedido.Endereco.CEP" class="form-control col-2" />
                        <span asp-validation-for="Pedido.Endereco.CEP" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Pedido.Endereco.Referencia" class="control-label"></label>
                        <input asp-for="Pedido.Endereco.Referencia" class="form-control col-6" />
                        <span asp-validation-for="Pedido.Endereco.Referencia" class="text-danger"></span>
                    </div>

                </fieldset>

                <div class="form-group text-left">
                    <a asp-page="./Listar" class="btn btn-info">Cancelar</a>
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_CustomConfirm");}
    @{await Html.RenderPartialAsync("_ConsultaCEP");}
    <script>
        $(document).ready(function () {
            $(".custom-file-input").change(function () {
                var arquivo = $(this).val().split("\\").pop();
                $(this).next(".custom-file-label").html(arquivo);
            });
        });
    </script>
}

